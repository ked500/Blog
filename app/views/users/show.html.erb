<% provide(:title, 'Profile') %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <%= render 'follow_form' if user_signed_in? %>
    </section>
  </aside>
  <div class="col-md-8">

  </div>
</div>