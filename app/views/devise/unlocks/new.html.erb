<% provide(:title, "Resend unlock") %>
<h1>Resend unlock instructions</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">


    <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, data: { turbo: false } }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit "Resend unlock instructions", class: "btn btn-primary" %>
      </div>
    <% end %>

  </div>
</div>