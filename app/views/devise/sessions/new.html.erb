<% provide(:title, "Log in") %>
<h1>Log in</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= link_to "(forgot password)", new_password_path(resource_name) %>
      </div>
      <div class="input-container" data-controller="password_toggle">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", required: true %>
        <i class="eyeicon">
          <svg class="fa-solid fa-eye" data-action="click->password_toggle#password"/>
        </i>
      </div>



      <% f.password_field :password, autocomplete: "current-password", class: 'form-control' %>


      <% if devise_mapping.rememberable? %>
        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me, { checked: true } %>
          <span>Remember me on this computer</span>
        <% end %>
      <% end %>



      <div class="actions">
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>
    <br>
    <%= render "devise/shared/integration_links" %>
    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>

